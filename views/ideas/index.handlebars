{{#each ideas}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a href="/ideas/edit/{{id}}" class="btn btn-outline-dark btn-block mb-2">Edit</a>
        <form action="/ideas/{{id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-outline-danger btn-block" value="Delete">
        </form>
    </div>
{{else}}
    <p>There are no ideas listed.</p>
{{/each}}